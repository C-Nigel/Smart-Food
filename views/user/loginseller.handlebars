
<head>
	<title>Login</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="/css/usercss/util.css">
	<link rel="stylesheet" type="text/css" href="/css/usercss/main.css">
<!--===============================================================================================-->
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
				<form method="post" action="../user/loginseller" class="login100-form validate-form">
					<span class="login100-form-title p-b-33">
						Account Login
					</span>
					
					<a href="/loginuser" id="buttons">Student/Staff</a>
					<a href="/loginseller" id="buttonss">Stall Owner</a>
					<a href="/loginadmin" id="buttonsa">Admin</a> 
                    <style>
						#buttonss {
							background: silver;
						}
					</style>
				
					
					<div class="wrap-input100 validate-input" data-validate = "ID must be a number">
							<input class="input100" type="text" name="stall_id" id="stall_id" placeholder="stall_id" value="{{stall_id}}" required/><span id="errrmsg"></span>
							<span class="focus-input100-1"></span>
							<span class="focus-input100-2"></span>
					</div>

					<div class="wrap-input100 rs1 validate-input" data-validate="Password is required">
						<input class="input100" type="password" name="password" placeholder="Password" required/>
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>

					<div class="container-login100-form-btn m-t-20">
						<button class="login100-form-btn">
							Sign in
						</button>
						<label>
        					<input type="checkbox" id="remember" checked="checked" name="remember"> Remember me
      					</label>
					</div>


				</form>
			</div>
		</div>
	</div>
	

	


</body>
