{{>_header}}
{{>_navbar}}
<head>
	<title>Forget Password</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="/css/usercss/util.css">
	<link rel="stylesheet" type="text/css" href="/css/usercss/main.css">
<!--===============================================================================================-->
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
				<form method="post" action="../user/forgetpw" class="login100-form validate-form">
					<div class="container">
						{{> _msg}} {{!-- views/partials/_msg.handlebars --}}
						{{> _errors}} {{!-- views/partials/_errors.handlebars --}}
						{{{body}}}
					</div>
					<span class="login100-form-title p-b-33">
						Password Recovery
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Valid admin number is required: 123456A">
							<input class="input100" type="text" name="admin_no" placeholder="Admin number" value="{{admin_no}}" required />
							<span class="focus-input100-1"></span>
							<span class="focus-input100-2"></span>
					</div>


					<div class="container-login100-form-btn m-t-20">
						<button class="login100-form-btn">
							Send Email
						</button>
					</div>

					<div class="text-center p-t-45 p-b-4">
						<span class="txt1">
							Create an account?
						</span>

						<a href="/register" class="txt2 hov1">
							Sign up
						</a>
					</div>

					<div class="text-center">
						<span class="txt1">
							Registered already?
						</span>

						<a href="/loginuser" class="txt2 hov1">
							Login
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	

	


</body>
