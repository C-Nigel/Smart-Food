<!DOCTYPE html>
<html lang="en">
    {{>_header}}
        <head>
            <meta charset="utf-8">
            <link rel="stylesheet" href="/css/menu/testingmenu.css">
            <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css">
        </head>

        <body>
            {{>_navbar}}
            <br>
            <div class="container">
                <br>
                <br>
                {{#if items}}
                    <span id="selectedItemCounter"></span>
                    <span id="tag">
                        <a href="#">
                            <i class="cart"></i>
                        </a>
                    </span>
                <div class="row" id="listMenu">
                    {{#each items}}
                    {{!-- originaally col-lg-4, but got some weird css error --}}
                    {{!-- thus special margin-left is being used in .cart --}}
                    <div class="col-sm-12 col-md-6 col-lg-5 items" style="padding-top: 15px;">
                        <div class="card bg-light mb-3 item">
                            <div class="card-body">
                                <h5 class="card-title">Name: {{name}}</h5>
                                <h6 class="card-subtitle mb-2 "><span class="price">${{price}}</span></h6>
                            </div>

                            <div class="card-body">
                                <p>Food Category: {{cat}}</p>
                                {{!-- Image of food items still in prg.... --}}
                                {{!-- <p>{{picture_url}}</p> --}} 
                                <img src="/img/chickenricemod1.jpg" />
                                <br>
                                <br>
                                <p>Introduced on: {{createdAt}}</p>
                            </div>
                            
                            <div class="card-body">
                                {{!-- <span id="tag"><a href="#"><i class="btn btn-primary">Select</i></a></span> --}}
                                {{!-- <button type="button" id="{{id}}" class="btn btn-primary selection">Select</button> --}}
                                <button class="btn btn-primary selection">Select</button> 
                                {{!-- adding id="{{id}}" to selection now doesnt give blue button --}}
                            </div>
                            

                        </div>
                    </div>
                    
                    {{/each}}
                    
                    <div id="modification">
                        <div id="specificationContainer">
                            {{!-- <h2>Selected Items</h2>
                            <i class="fa fa-times-circle-o fa-3x openCart" aria-hidden="true"></i>
                            <div id="cartItems"></div>
                            <span id="cartTotal"></span>
                            <br>
                            <button type="button" class="back">Back to selection</button> --}}
                            <h2>Specification</h2>
                            <p>Quantity: <input type="text" value=0 size="2" id="modifyingChanges"></p>
                            <div class="quantity-operator">
                                <button class="btn btn-primary" id="modifyingChanges_Add">+</button>
                                <button class="btn btn-primary" id="modifyingChanges_Minus">-</button>
                                <button class="btn btn-primary tocart" type="button">Add to Cart</button>
                            </div>
                            <br>
                            <br>
                            <br>
                            <button class="btn btn-primary back">Back to selection</button>
                        </div>
                    </div>

                    <div id="shoppingCart">
                        <div id="cartContainer">
                            <h2>Selected Items</h2>
                            <!--<i class="fa fa-times-circle-o fa-3x openCart" aria-hidden="true"></i>-->
                            <div id="cartItems"></div>
                            <span id="cartTotal"></span>
                            <br>
                            <button type="button" class="btn btn-primary return">return</button>
                        </div>
                    </div>


                        
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
                    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
                    <script src="/js/menudesign.js"></script>


                    {{else}}
                    <br>
                    <h3>No Chinese Cuisine available at the moment !</h3>
                    {{/if}}

                    {{!-- <div id="shoppingCart">
                        <h2>Specification</h2>
                        <p>Quantity: <input type="text" value=0 size="2" id="modifyingChanges"></p>
                        <div class="quantity-operator">
                            <button type="button" id="modifyingChanges_Add">+</button>
                            <button type="button" id="modifyingChanges_Minus">-</button>
                        </div>
                        <button class="tocart" type="button">Add to Cart</button>
                    </div> --}}
                </div>
                
            </div>
            {{>_footer}}
        </body>
</html>