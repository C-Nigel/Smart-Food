<link rel="stylesheet" href="/css/stallownerconfig/stallownerconfig.css">
{{>_header}}

<body>
    {{>_navbar}}
    <div class="container" style="padding-top: 6rem;">
        <div class="card card-body mx-auto">
            <h3>Create New Food Item</h3>
            <br>
            <form action="/stallownerConfig" method="post">
            <input type="hidden" name="outletid" value="{{outlet}}">
                <div class="row mb-2">
                    <div class="col-lg-9">
                        <div class="form-group">
                            <label for="itemName">Name of food item:</label>
                            <input type="text" class="form-control" id="itemName" name="itemName" placeholder="Enter name">
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="itemPrice">Price of food item:</label>
                                    <input type="number" step="any" min="0" class="form-control" id="itemPrice" name="itemPrice"
                                        placeholder="Enter price">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="itemCategory">Category of food item:</label>
                                    <select class="form-control" id="itemCategory" name="itemCategory">
                                        <option>Chinese</option>
                                        <option>Malay</option>
                                        <option>Indian</option>
                                        <option>Western</option>
                                        <option>Fusion</option>
                                        <option>Vegetarian</option>
                                        <option>Desserts</option>
                                        <option>Drinks</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 mb-4">
                        <div class="form-group">
                            <label for="itemImage">Add image to item (optional)</label>
                            <input type="file" id="fooditemImgUpload" name="fooditemImgUpload"
                                accept="image/png, image/jpg, image/jpeg, image/gif">
                            <img id="fooditemImgUpload" src="/img/no-img.png" alt=""
                                class="border img-thumbnail img-fluid" style="height:40%">
                        </div>
                    </div>
                </div>
                <input class="btn btn-outline-primary" type="submit" value="Save">
            </form>
        </div>
    </div>
</body>