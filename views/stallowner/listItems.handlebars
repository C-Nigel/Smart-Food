<html>
{{>_header}}

<body style="">
    {{>_navbar}}
    <div class="container" style="padding-top: 5rem;">
        <h3 class="text-left">List of Items available
            <a href="/newItem" class="btn btn-primary float-right">Add new item</a>
        </h3>
        {{#if items}}
        {{#each items}}
        <div class="card mt-3 mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <h5 class="card-title">{{name}}</h5>
                    </div>
                    <div class="col">
                        <div class="float-right">
                            <a href="/editItem/{{id}}" class="btn btn-outline-primary">Edit</a>
                        </div>
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col-12 col-lg-3">
                        <p class="card-text">Item ID: {{id}}</p>
                    </div>
                    <div class="col-12 col-lg-3">
                        <p class="card-text">Price: ${{price}}</p>
                    </div>
                    <div class="col-12 col-lg-3">
                        <p class="card-text">Category: {{cat}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>
</body>

</html>