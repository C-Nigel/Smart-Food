<section class="main-block">
    <div class="container">
        <h3>Add new Favourites</h3>
        <form action="" method="post" id="addFavourite">
            <div class="form-group">
                <label class="font-italic" for="food">Name</label>
                <textarea class="form-control" id="name" name="name" rows="1">{{foodName}}</textarea>
            </div>
            <div class="form-group mb-4">
                <label class="font-italic" for="food">Description</label>
                <textarea class="form-control" id="description" name="description" rows="8">{{foodDescription}}</textarea>
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                <label class="font-italic">Canteen</label>
                <br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="canteen" id="North" value="North">
                    <label class="form-check-label" for="North">North</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="canteen" id="South" value="South">
                    <label class="form-check-label" for="South">South</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="canteen" id="Koufu" value="Koufu">
                    <label class="form-check-label" for="Koufu">Koufu</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="canteen" id="FoodConnect" value="FoodConnect">
                    <label class="form-check-label" for="FoodConnect">Food Connect</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="canteen" id="Foodgle" value="Foodgle">
                    <label class="form-check-label" for="Foodgle">Foodgle</label>
                </div>
            </div>
            <button id="butAddFavourites" type="submit" class="btn btn-primary">Save
			</button>
        </form>
    </div>
