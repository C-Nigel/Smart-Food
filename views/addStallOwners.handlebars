{{>_header}}
{{>_navbar}}
<section class="main-box">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 form-container">
            <h2>Add Stall Owners</h2>
            <form  action='/outlet/addSO' method="post" id="addStallOwners">
                <div class="row">
                    <div class="col-sm-7 form-group" id='labels'>
                        <label for="name">
                            Stall Owner Name:</label>
                        <input required type="text" class="form-control" id="name" name="name"  value={{name}}>
                    </div>
                    <br>
                    <div class="col-sm-7 form-group">
                        <label for="password">
                            Enter Password:</label>
                            <br>
                        <input required type="password" class="form-control" id="password" name="password" value={{password}}>
                        <input type="checkbox" onclick="showPass()"> Show Password
                    </div>
                    <div class="col-sm-12 form-group">
                        <label for="desc">
                            Description: </label>
                            <br>
                        <textarea class="form-control" type="textarea" name="desc" id="desc" placeholder="Stall Owner Description" maxlength="6000" rows="5" value={{desc}}></textarea>
                    </div>
                    <!--<button type="submit" formmethod="POST" class="btn btn-lg btn-warning btn-block" >Add Stall Owners </button>-->
                       <button type="submit" disabled style="display: none" aria-hidden="true"></button>
                        <input  class="btn btn-outline-primary" type="submit" value="Save">
                </div>
            </form>
        </div>
    </div>
</section>
{{>_footer}}

<style>
    section {
        padding: 120px;
    }

    form {
        margin: 20px;
        border: solid;
        padding: 50px;
    }

</style>

<script>
    function showPass() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        }
        else{
            x.type = "password";
        }
    }
</script>
